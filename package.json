{
  "name": "messenger",
  "version": "1.0.0",
  "description": "Messenger desktop app for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "build:dmg": "electron-builder --mac dmg"
  },
  "keywords": [
    "messenger",
    "facebook",
    "chat"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.messenger.desktop",
    "productName": "Messenger",
    "mac": {
      "category": "public.app-category.social-networking",
      "target": [
        "dmg",
        "zip"
      ]
    }
  }
}
